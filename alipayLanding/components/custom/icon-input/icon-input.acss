
.IconBox {
    border-radius: 1vw;
    background: white;
    padding:0 1vw 0 4vw;
    margin-top: 2.5vw;
    display: flex;
    align-items:center;
}

.leftIcon {
    width: 4vw;
    vertical-align: middle;
}

.IconBox .title {
    color: black;
    margin-left: 4vw;
    vertical-align: middle;
    min-width: 15vw;
}
.rightBox {
    flex: 1;
    text-align: right;
    padding-right: 3vw;
    
}
.rightInput {
    vertical-align: middle;
    font-size: 3.5vw;
     color:#666;
     height: 100%;
     width: 100%;
}