
.buyCard {
    background: rgb(245, 245, 245);
}

.vipBox {
    padding: 3vw 3vw;
}
.vipBanner {
   background-size: 100% 100%;
   height: 24vw;
   display: flex;
   align-items:center;
}

.vipBox .vipBanner {
 width: 100%;
}

.vipBox  .iconBox{
    width: 10vw;
    height: 10vw;
    margin: 0 4vw;
}
.buyCard .vipBox .vipBanner .vipInfo {
    line-height: 5.5vw;
}

.buyCard .vipBox .vipBanner .vipInfo .fontSmall{
    font-size: 5vw;
    font-weight: 400;
    color: rgb(188, 141, 93);
}
.buyCard .vipBox .vipBanner .vipInfo .fontBig{
    font-size: 4vw;
    font-weight: 600;
    color: rgb(117, 70, 10);
    margin-top: .53333vw;
}
.buyCard .vipBox .vipBanner .vipInfo .timeBox {
    font-size: 3vw;
    font-weight: 400;
    color: rgb(117, 70, 10);
}

.buyCard .addressBox {
    background: rgb(255, 255, 255);
    padding: 2.66667vw 2.66667vw;
    border-radius: 2.66667vw 2.66667vw 0 0;
}

.buyCard .main{
    border-radius: 2.66667vw;
}
.buyCard .addressBox .address {
    padding: 2vw 0;
    border-bottom: 1px solid rgb(229, 229, 229);
    display: flex;
    align-items:center;
}
.buyCard .addressBox .address .iconBox{
    flex: 0.5;
    text-align: center;
}

.buyCard .addressBox .address .iconBox .locationIcon {
    width: 5vw;
    margin: 0 auto;

}
.buyCard .addressBox .address .textBox{
    flex: 2;
}
.buyCard .addressBox .address .textBox .area, .buyCard .addressBox .address .textBox .street {
    font-size: 3vw;
    color: rgb(153, 153, 153);
}
.buyCard .addressBox .address .operate {
    flex: 1.5;
    text-align: center;
    font-size: 2.66667vw;
    color: rgb(216, 177, 93);
}

.buyCard .vipCardBox {
    padding: 2vw;
    background: rgb(255, 255, 255);
}



.buyCard .vipCard{
    height:10vw;
    line-height:10vw;
    color: rgb(26, 26, 26);
    background: rgb(255, 255, 255);
    font-size: 4vw;
    display: flex;
}

.buyCard .vipCard .cardPrice{
    text-align: right;
    flex: 1;
    font-size: 3vw;
}

.buyCard .vipCardBox .bannerBox {
   margin: 3vw 0;
}

.buyCard .vipCardBox .bannerBox .imgBox{
   width: 100%;
}

.buyCard .postageBox {
   font-size: 3vw;
   padding:4vw 0px 3vw 5vw;
}

.postageRadio{
     float: right;
     margin-right: 2vw;
}

.buyCard .footerBox {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 15vw;
    line-height: 1.1;
    background: rgb(255, 255, 255);
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}
.buyCard .footer {
    display: flex;
}

.buyCard .footerBox .footer .left {
    width: 45%;
    padding-left: 2.66667vw;
}

.buyCard .footerBox .footer .left .leftTop{
   margin: 2vw 0 1vw 0;
}

.buyCard .footerBox .footer .vipCardPrice {
    font-size: 3vw;
    font-weight: 400;
    color: rgb(77, 77, 77);
    text-align: center;
    padding-right: 2.66667vw;
}

.buyCard .footerBox .footer .totalPrice {
    color: rgb(239, 34, 5);
    font-size: 5vw;
}

.buyCard .footerBox .footer .postagePrice{
    color: rgb(77, 77, 77);
    font-size: 3vw;
}

.buyCard .footerBox .footer .right{
   flex: 1;
}

.buyCard .footerBox  .label{
    position: absolute;
    left: 3vw;
    top: -8vw;
    padding: 2vw;
    font-size: 3vw;
    color: rgb(255, 255, 255);
    width: 48vw;
    height: auto;
    background-size: 100% 100%;
    text-align: center;
}

.buyCard .footerBox .footer  .submitBtn{
    width: 100%;
    background: none;
    /* border: 0; */
    height: 16vw;
    line-height: 16vw;
    font-size: 4.8vw;
    font-weight: 600;
    color: rgb(117, 70, 10);
    text-align: center;
    padding-left: 8vw;
    border: none;
  
}